	   <!-- Login Prompt -->
  	<login-config>    	   
       <auth-method>FORM</auth-method>
       <realm-name>zephyrplace-security-domain</realm-name>
       <form-login-config>  
            <form-login-page>/login/login.xhtml</form-login-page>  
            <form-error-page>/login/login-error.xhtml</form-error-page>  
       </form-login-config>  
  	</login-config>
 
 
	 <!-- Protected Areas -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Only admins</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Users and admins</web-resource-name>
            <url-pattern>/paginas/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
            <role-name>USUARIO</role-name>
        </auth-constraint>
    </security-constraint>
 
    <!-- Allowed Roles -->
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>USUARIO</role-name>
    </security-role>
     
    



</web-app>